@model HRdepartment.Models.Post

@{
    ViewData["Title"] = "Редактирование должности";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_Post" />
            <div class="form-group">
                <label asp-for="Title_Post" class="control-label">Название должности</label>
                <input asp-for="Title_Post" class="form-control" />
                <span asp-validation-for="Title_Post" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
