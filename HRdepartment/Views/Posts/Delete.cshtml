@model HRdepartment.Models.Post

@{
    ViewData["Title"] = "Удаление должности";
}

<h3>Вы действительно хотите удалить должность?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Должность
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title_Post)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id_Post" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться назад</a>
    </form>
</div>
