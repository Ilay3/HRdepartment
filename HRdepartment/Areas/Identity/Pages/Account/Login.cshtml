@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    .gradient-custom-3 {
        /* fallback for old browsers */
        background: #F37335;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right, rgba(132, 250, 176, 0.5), rgba(143, 211, 244, 0.5));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, rgba(132, 250, 176, 0.5), rgba(143, 211, 244, 0.5))
    }

    .gradient-custom-4 {
        /* fallback for old browsers */
        background: #F37335;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right, #FDC830, #F37335);
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, #FDC830, #F37335);
    }
</style>

<section class="">
    <div class="mask d-flex align-items-center">
        <div class="container mt-3">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h4 class="text-uppercase text-center mb-4">Авторизация</h4>

                            <form id="account" method="post">
                                <div asp-validation-summary="All"></div>
                                <div class="form-outline mb-4">
                                    
                                    <input asp-for="Input.Email" type="email" placeholder="Email" type="text" class="form-control form-control-md" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>

                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Input.Password" type="password" placeholder="Пароль" class="form-control form-control-md" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>

                                </div>

                                <div class="form-check d-flex justify-content-start mb-3">
                                    <label asp-for="Input.RememberMe" class="form-check-label">
                                        <input asp-for="Input.RememberMe" class="form-check-input" />
                                        Запомнить меня?
                                        @*@Html.DisplayNameFor(m => m.Input.RememberMe)*@
                                    </label>
                                </div>

                                <div class="d-flex justify-content-lg-start mb-4">
                                    <div class="g-recaptcha" data-sitekey="6Ld83FslAAAAAE85TzJiOeKwgFu0C2Yjxz9mJM3y"></div>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit"
                                            class="btn btn-success btn-block btn-md gradient-custom-4 text-body">
                                        Авторизоваться
                                    </button>
                                </div>

                                <p class="text-center text-muted mt-4 mb-0">
                                    Нет аккаунта?
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-body"><u>Зарегистрироваться</u></a>
                                </p>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://www.google.com/recaptcha/api.js" async defer></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}